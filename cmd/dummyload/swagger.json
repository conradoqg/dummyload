{
  "openapi": "3.0.0",
  "info": {
    "title": "dummyload API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/load": {
      "get": {
        "summary": "Get current and target CPU cores and memory load",
        "responses": {
          "200": {
            "description": "Load information",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LoadResponse"}
              }
            }
          }
        }
      },
      "post": {
        "summary": "Update target CPU cores and memory load",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/LoadRequest"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated load info",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LoadResponse"}
              }
            }
          }
        }
      }
    },
    "/api/v1/health": {
      "get": {
        "summary": "Get current readiness and liveness configuration",
        "responses": {
          "200": {
            "description": "Health configuration",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/HealthConfig"}
              }
            }
          }
        }
      },
      "post": {
        "summary": "Update readiness/liveness status and delays",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/HealthConfigRequest"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated health configuration",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/HealthConfig"}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoadRequest": {
        "type": "object",
        "properties": {
          "cores": {"type": "number", "format": "float", "minimum": 0},
          "mem": {"type": "integer", "format": "int64", "minimum": 0}
        },
        "description": "Specify desired CPU load in cores (can be fractional) and/or memory in MB."
      },
      "LoadResponse": {
        "type": "object",
        "properties": {
          "target_cores": {"type": "number", "format": "float", "description": "Requested CPU load in cores."},
          "actual_cores": {"type": "number", "format": "float", "description": "Measured CPU load in cores."},
          "target_memory_mb": {"type": "integer", "format": "int64", "description": "Requested memory load in megabytes."},
          "actual_memory_mb": {"type": "integer", "format": "int64", "description": "Measured memory load in megabytes."}
        }
      },
      "HealthConfig": {
        "type": "object",
        "properties": {
          "ready": {"type": "boolean", "description": "Whether readiness probe should succeed."},
          "live": {"type": "boolean", "description": "Whether liveness probe should succeed."},
          "ready_delay_ms": {"type": "integer", "format": "int64", "minimum": 0, "description": "Artificial delay in milliseconds for readiness probe."},
          "live_delay_ms": {"type": "integer", "format": "int64", "minimum": 0, "description": "Artificial delay in milliseconds for liveness probe."}
        }
      },
      "HealthConfigRequest": {
        "type": "object",
        "properties": {
          "ready": {"type": "boolean"},
          "live": {"type": "boolean"},
          "ready_delay_ms": {"type": "integer", "format": "int64", "minimum": 0},
          "live_delay_ms": {"type": "integer", "format": "int64", "minimum": 0}
        },
        "description": "Specify desired readiness/liveness status and probe delays in milliseconds."
      }
    }
  }
}
